<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

  <com.google.android.exoplayer2.ui.PlayerView android:id="@+id/player_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#33000000"
      android:orientation="vertical">

    <TextView android:id="@+id/debug_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        android:visibility="gone"/>

    <LinearLayout android:id="@+id/controls_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone">

      <Button android:id="@+id/select_tracks_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/track_selection_title"
          android:enabled="false"
          android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/sonami_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >

      <androidx.constraintlayout.widget.ConstraintLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:id="@+id/channels_control"
          android:layout_width="match_parent"
          android:layout_height="0dip"
          android:layout_weight="0.55"
          android:visibility="gone">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_mid_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/mid_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/mid_bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottom_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/center_right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85" />

        <RadioButton android:id="@+id/rbLChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintTop_toTopOf="@+id/top_guideline"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:text="L"
            android:checked="false"
            />

        <RadioButton android:id="@+id/rbCChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/center_guideline"
            app:layout_constraintTop_toTopOf="@+id/top_guideline"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:text="C"
            android:checked="false"
            />

        <RadioButton android:id="@+id/rbRChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/right_guideline"
            app:layout_constraintTop_toTopOf="@+id/top_guideline"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:text="R"
            android:checked="false"
            />


        <RadioButton android:id="@+id/rbLssChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintTop_toTopOf="@+id/mid_guideline"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:text="Lss"
            android:checked="false"
            />

        <RadioButton android:id="@+id/rbRssChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/right_guideline"
            app:layout_constraintTop_toTopOf="@+id/mid_guideline"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:text="Rss"
            android:checked="false"
            />


        <RadioButton android:id="@+id/rbLsChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintTop_toTopOf="@+id/bottom_guideline"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:text="Ls"
            android:checked="false"
            />

        <RadioButton android:id="@+id/rbAllChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/center_guideline"
            app:layout_constraintTop_toTopOf="@+id/bottom_guideline"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:text="All"
            android:checked="true"
            />

        <RadioButton android:id="@+id/rbRsChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/right_guideline"
            app:layout_constraintTop_toTopOf="@+id/bottom_guideline"
            android:scaleX="1.25"
            android:scaleY="1.25"
            android:text="Rs"
            android:checked="false"
            />

          <RadioButton android:id="@+id/rbLhChannel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="@+id/left_center_guideline"
              app:layout_constraintTop_toTopOf="@+id/top_mid_guideline"
              android:scaleX="1.25"
              android:scaleY="1.25"
              android:text="Lh"
              android:checked="false"
              />

          <RadioButton android:id="@+id/rbRhChannel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="@+id/center_right_guideline"
              app:layout_constraintTop_toTopOf="@+id/top_mid_guideline"
              android:scaleX="1.25"
              android:scaleY="1.25"
              android:text="Rh"
              android:checked="false"
              />

          <RadioButton android:id="@+id/rbLshChannel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="@+id/left_center_guideline"
              app:layout_constraintTop_toTopOf="@+id/mid_bottom_guideline"
              android:scaleX="1.25"
              android:scaleY="1.25"
              android:text="Lsh"
              android:checked="false"
              />

          <RadioButton android:id="@+id/rbRshChannel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="@+id/center_right_guideline"
              app:layout_constraintTop_toTopOf="@+id/mid_bottom_guideline"
              android:scaleX="1.25"
              android:scaleY="1.25"
              android:text="Rsh"
              android:checked="false"
              />
          <RadioButton android:id="@+id/rbTChannel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toLeftOf="@+id/center_guideline"
              app:layout_constraintTop_toTopOf="@+id/mid_guideline"
              android:scaleX="1.25"
              android:scaleY="1.25"
              android:text="T"
              android:checked="false"
              />


      </androidx.constraintlayout.widget.ConstraintLayout>


      <RelativeLayout android:id="@+id/sonami_control"
          android:layout_weight="0.45"
            android:layout_width="match_parent"
            android:layout_height="0dip">

          <Switch
              android:id="@+id/sw_sonami"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentRight="true"
              android:paddingBottom="90dp"
              android:paddingRight="15dp"
              android:text="SONAMI:"
              android:checked="false" />

          <Switch
              android:id="@+id/sw_channels"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentLeft="true"
              android:paddingBottom="90dp"
              android:paddingLeft="15dp"
              android:text="Channel:"
              android:checked="false" />

          <Switch
              android:id="@+id/sw_eq"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignRight="@+id/sw_channels"
              android:paddingBottom="15dp"
              android:layout_above="@+id/sw_channels"
              android:text="EQ:"
              android:checked="false"
              android:visibility="gone"/>

        </RelativeLayout>


    </LinearLayout>



    <RelativeLayout android:id="@+id/eq_control"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    </RelativeLayout>

  </LinearLayout>

</FrameLayout>
